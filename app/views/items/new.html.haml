  .header
    .header__img
      = link_to root_path do
        = image_tag asset_path('logo/logo.png'), alt: "Footer-icon", id: "pic1", class: "header-image"
  .main
    .main__box
      = form_with model: @item, local: true do |form|
        .main__box__image
          .main__box__image__text
