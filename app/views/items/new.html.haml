                .js-file_group{"data-index" => "#{image.index}"}
                  = image.file_field :image, class: 'js-file', id:"img-file"
                  %label{for: "img-file", class: "label-box", id: "img-file"}
              
                    -# %i.fas.fa-camera
                    -#   %pre.label-box__text-visible クリックしてファイルをアップロード
                  -# %br/
