%header.top-header
  .headerinner
    .main-header
      %h1.icon
        = link_to '#' do
          =image_tag '/assets/logo/logo.png', class: "image1"
      .searchBox
        %form{:action => "#", class: "form"}
          %input{class: "searchBox--input", placeholder: "キーワードから検索", class: "input"}
          %button{:type => "submit"}
            .searchBox__icon
              = image_tag '/assets/icon/icon-search 1.png', class: "image2"
    .nav
      %ul.listleft
        %li.listleft__category
          = link_to '#', class:"cat" do
            カテゴリー
        %li.listleft__bland
          = link_to '#', class:"bland" do
            ブランド

      %ul.listright
        %li.listright__login
          = link_to '#' do
            ログイン
        %li.listright__new
          = link_to '#' do
            新規会員登録


%nav.steps
  %ul.step-contents
    %li.step-content
      = link_to "FURIMA", "#", class: "step-link" 
    %li.step-content
      %i.fa.fa-angle-right
    %li.step-content
      = link_to "ベビー・キッズ", "#", class: "step-link" 
    %li.step-content
      %i.fa.fa-angle-right
    %li.step-content
      = link_to "ベビー服(男女兼用)  ~95cm", "#", class: "step-link" 
    %li.step-content
      %i.fa.fa-angle-right
    %li.step-content
      = link_to "アウター", "#", class: "step-link" 
    %li.step-content
      %i.fa.fa-angle-right
    %li.step-content
      %p.last-step
        product3





.main
  .show-main
    .content-left-hide
    .content-right
      .top-content
        .itembox
          %h2.itembox__name
            product3
          .itembox__body
            %ul.up
              %li.up-pic
                %img{ src:'/assets/pict/product1.png'}
                  %ul.low
                    %li.low-pic
                      %img{ src:'/assets/pict/product1.png'}
                    %li.low-pic
                      %img{ src:'/assets/pict/product3.png'}
                    %li.low-pic
                      %img{ src:'/assets/pict/product4.png'}
          .itemBox__price
            %span.price
              ¥30,000
            .price-detail
              %span
                (税込)
              %span
                送料込み



            .item-detail
              product3
            .item-table
              %table.teble-list
                %tbody.table-body
                  %tr
                    %th
                      出品者
                    %td
                      hoge
                  %tr
                    %th
                      カテゴリー
                    %td
                      = link_to "ベビー・キッズ", "#", class: "category" 
                      %br
                      = link_to "ベビー服(男女兼用)  ~95cm", "#", class: "category"  
                      %br
                      = link_to "アウター", "#", class: "category" 
                  %tr
                    %th
                      ブランド
                    %td
                  %tr
                    %th
                      商品のサイズ
                    %td
                  %tr
                    %th
                      商品の状態
                    %td
                      未使用に近い
                  %tr
                    %th
                      配送料の負担
                    %td
                      送料込み（出品者負担）
                  %tr
                    %th
                      発送元の地域
                    %td
                      = link_to "岩手県", "#", class: "category"

                  %tr
                    %th
                      発送日の目安
                    %td
                      4-7日で発送


            .optional-area
              %ul.option-list
                %li.optional-btn-likebtn
                  %i.fa.fa-star
                    お気に入り 0
                    
              %ul.optional
                %li.optional-btn
                  = link_to "#", class: "flag" do
                    %i.fa.fa-flag
                      不適切な商品の通報

        .comment-box
          .comment-contents
            %textarea
            %p.notice-msg
              相手のことを考え丁寧なコメントを心がけましょう。
              %br
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
            %btn.comment-btn
              %i.fa.fa-comment
                コメントする
      
      %ul.move-items
        %li.before-item
          = link_to "#", class: "before" do
            %i.fa.fa-angle-left
            %span
              前の商品

        %li.after-item
          = link_to "#", class: "after" do
            %i.fa.fa-angle-right
            %span
              後ろの商品

      .related-items
        = link_to "#", class: "more-search" do
          ベビー・キッズをもっと見る



%aside.banner
  .inner
    %h2.inner__title だれでもかんたん、人生を変えるフリマアプリ
    %p.inner__text 今すぐ無料ダウンロード!
    .inner__icon
      = link_to '#' do
        = image_tag '/assets/pict/app.svg', class: "app"
      = link_to '#' do
        = image_tag '/assets/pict/google-play-badge.png', class: "google"


