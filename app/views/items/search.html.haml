%header.top-header
  = render "items/index-header"

.main
  %section.pickup-container
    %h2.head 検索結果
    .productBox
      .productHead
        = link_to '#', class:"aaa" do
          %h3.title 新規投稿商品
      .productLists
        .productList
          - @items_simple.each do |item|
            - if item.buyer_id.nil?
              = link_to item_path(item.id), class:"aaa" do
                %figure.productList--img
                  = image_tag item.images.first.image.url
                .product--body
                  %h3.name 
                    = item.name
                  .details
                    %ul
                      %li 
                        = item.price 
                      %li
                        %i.fa.fa-star
                        0
                    %p （税込）

%aside.banner
  .inner
    %h2.inner__title だれでもかんたん、人生を変えるフリマアプリ
    %p.inner__text 今すぐ無料ダウンロード!
    .inner__icon
      = link_to '#' do
        = image_tag asset_path('pict/app.svg'), class: "app"
      = link_to '#' do
        = image_tag asset_path('pict/google-play-badge.png'), class: "google"

%footer.footer
  = render "items/index-footer"

- if user_signed_in?
  = link_to new_item_path do
    .purchaseBtn
      %span.purchaseBtn__text 出品する
      = image_tag asset_path('icon/icon_camera.png'), class: "purchaseBtn__icon"
- else
  = link_to new_user_registration_path do
    .purchaseBtn
      %span.purchaseBtn__text 出品する
      = image_tag asset_path('icon/icon_camera.png'), class: "purchaseBtn__icon"





