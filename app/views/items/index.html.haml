%header.top-header
  .headerinner
    .main-header
      %h1.icon
        %a{ href: "#"}
          %img{src:'/assets/logo/logo.png', class: "image1"} 
      .searchBox
        %form{:action => "#", class: "form"}
          %input{class: "searchBox--input", placeholder: "キーワードから検索", class: "input"}
          %button{:type => "submit"}
            .searchBox__icon
              %img{src:'/assets/icon/icon-search 1.png', class: "image2"}
    .nav
      %ul.listleft
        %li.listleft__category
          %a{href: "#", class:"cat"}カテゴリー
        %li.listleft__bland
          %a{href: "#", class:"bland"}ブランド

      %ul.listright
        %li.listright__login
          %a{ href: "#"}ログイン
        %li.listright__new
          %a{ href: "#"}新規会員登録

.main
