%header.user_header
  .user_logo
    = link_to root_path do
      =image_tag "/assets/logo/logo.png"

.sign-up
  .sign-up__text
  %h2 商品送付先住所
  .sign-up__input
    = form_for(@address, url: addresses_path, method: :post) do |f|
      = render "devise/shared/error_messages", resource: @address
      .field
        = f.label :郵便番号
        %span 必須
        %br/
        = f.text_field :postcode
      .field
        = f.label :都道府県
        %span 必須
        %br/
        = f.text_field :address_prefecture
      .field
        = f.label :市区町村
        %span 必須
        %br/
        = f.text_field :address_city
      .field
        = f.label :番地
        %span 必須
        %br/
        = f.text_field :address_block
      .field
        = f.label :マンション名
        %span 必須
        %br/
        = f.text_field :address_building
      .field
        = f.label :お届け先の電話番号
        %span.form-any 任意
        %br/
        = f.text_field :buy_tell
      .actions
        = f.submit "新規登録"
    = render "devise/shared/links"
  
%footer.bottom
  .bottom__text
    = link_to root_path do
      %p プライバシーポリシー
    = link_to root_path do
      %p メルカリ利用規約
    = link_to root_path do
      %p 特定商取引に関する表記
  = link_to root_path do
    =image_tag "/assets/logo/logo-white.png"
  %p© Furima, Inc.

  
 

 

