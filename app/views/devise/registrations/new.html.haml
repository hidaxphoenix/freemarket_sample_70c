%header.user_header
  = render "items/header"

.sign-up
  .sign-up__text
  %h2 新規会員登録
  .sign-up__input
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: @user
      .field
        = f.label :ニックネーム　
        %span 必須
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
      .field
        = f.label :メールアドレス
        %span 必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :パスワード
        %span 必須
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以内)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .field
        = f.label :パスワード（再入力）
        %span 必須
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .field-area
        .field-area__name
          = f.label :氏（漢字）
          %span 必須
          %br/
          = f.text_field :first_name
        .field-area__name
          = f.label :名（漢字）
          %span 必須
          %br/
          = f.text_field :last_name
      .field-area
        .field-area__name
          = f.label :氏（かな）
          %span 必須
          %br/
          = f.text_field :first_name_kana
        .field-area__name
          = f.label :名（かな）
          %span 必須
          %br/
          = f.text_field :last_name_kana
      .field
        = f.label :電話番号
        %span 必須
        %br/
        = f.text_field :phone
      .field
        = f.label :生年月日
        %span 必須
        %br/
        = f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
      .actions
        = f.submit '次へ', class: "btn-default btn-red", url: "address_path"
    = render "devise/shared/links"
  
%footer.bottom
  = render "items/footer"

