%header
  %h1
    .logo
      = link_to root_path do
        =image_tag "/assets/logo/logo.png"

.sign-up
  .sign-up__text
  %h2 新規会員登録
  .sign-up__input
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :ニックネーム　
        %span 必須
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
      .field
        = f.label :メールアドレス
        %span 必須
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :パスワード
        %span 必須
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以内)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .field
        = f.label :パスワード（再入力）
        %span 必須
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .field-area
        .field-area__name
          = f.label :氏（漢字）
          %span 必須
          %br/
          = f.text_field :first_name
        .field-area__name
          = f.label :名（漢字）
          %span 必須
          %br/
          = f.text_field :last_name
      .field-area
        .field-area__name
          = f.label :氏（かな）
          %span 必須
          %br/
          = f.text_field :first_name_kana
        .field-area__name
          = f.label :名（かな）
          %span 必須
          %br/
          = f.text_field :last_name_kana
      .field
        = f.label :電話番号
        %span 必須
        %br/
        = f.text_field :phone
      .field
        = f.label :生年月日
        %span 必須
        %br/
        != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
      .actions
        = f.submit "新規登録"
    = render "devise/shared/links"
  
%footer.bottom
  .bottom__text
    = link_to root_path do
      %p プライバシーポリシー
    = link_to root_path do
      %p メルカリ利用規約
    = link_to root_path do
      %p 特定商取引に関する表記
  = link_to root_path do
    =image_tag "/assets/logo/logo-white.png"
  %p© Furima, Inc.

  
 

 

